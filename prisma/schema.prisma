// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String?
  email       String  @unique
  password    String?
  bookmarks   Bookmarks[]

}


model Calendar {
  id        Int     @id @default(autoincrement())
  userID    Int
  date      String
  meal      String
  name      String
  image     String
}

model Bookmarks {
  id          Int     @id @default(autoincrement())
  userID      Int   
  user        User  @relation(fields: [userID], references: [id])  
  url         String  @unique
  name        String 
  image       String
  
}
